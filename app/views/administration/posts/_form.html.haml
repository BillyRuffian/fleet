-# locals: (post:)

.post-content

  = form_with model: [:administration, post], class: 'pure-form pure-form-stacked' do |f|
    %fieldset
      .post-content-header.pure-g
        .pure-u-1
          = f.label :title 
          = f.text_field :title, class: 'pure-input pure-input-1'

        .pure-u-1-2
          = f.label :published_at, 'Publication date'
          = f.datetime_local_field :published_at
        .pure-u-1-4
          = f.label :draft, 'Draft'
          = f.check_box :draft
        .pure-u-1-4
          = f.submit class: 'pure-button primary-button' 


      .post-content-body
        = f.rich_text_area :content